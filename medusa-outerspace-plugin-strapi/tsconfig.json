{
  "compilerOptions": {
    "target": "es2019",
    "allowJs": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": true,
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "checkJs": false
  },
  "include": [
    "src",
    "src/api/routes/strapi-admin"
  ],
  "exclude": [
    "**/__tests__",
    "**/__mocks__/**",
    "**/*.spec.ts",
    "node_modules",
    "build",
    ".cache"
  ]
}
